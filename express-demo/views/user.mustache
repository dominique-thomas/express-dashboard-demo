<html>
	<head>
		<title>User Dashboard</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="./css/main.css">
		<link rel="stylesheet" type="text/css" href="./css/user.css">
	</head>
	<body>
	
	<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 box-shadow">
			  <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Logo</a>			  
			  <ul class="navbar-nav px-3">
				<li class="nav-item text-nowrap">
				  <a class="nav-link" href="/signout" id="signOutButton">Sign out</a>
				</li>
			  </ul>
		</nav>
		
		<div id="main" class="main">		
			<section class="jumbotron text-center">
				<div class="container">
					<h2 class="jumbotron-heading">User Dashboard</h2>
					<hr />
					<div class="col-lg-8 mx-auto">
					  <p class="lead mb-4">Welcome back, <strong>{{#userData}}{{firstname}} {{lastname}}{{/userData}}</strong>.
					  <br />
					  Use the form below to modify your user profile data.
					  </p>
					
					</div>					
				</div>	
			</section>	
			
			{{#updateUserSuccess}}
				<div class="alert alert-success" role="alert" id="successAlert">
				Successfully updated your user data.
				</div>
			{{/updateUserSuccess}}
			<div class="alert alert-danger hidden" role="alert" id="modifyErrorAlert">
				Error.
			</div>
			<div class="d-flex justify-content-center">

			<form class="requires-validation" novalidate id="modifyUserForm" method="post" action="/modifyUser">
			
						  <div class="form-group">
								<label for="readonlyEmail">Email</label> (readonly)
								<input type="email" name="username" class="form-control" id="readonlyEmail" required="" value="{{#userData}}{{username}}{{/userData}}" readonly>
						 </div>
						 <br>
						  <div class="form-group">
							<label for="passwordInput">Password</label> <small>(Minimum of 4 characters, spaces not allowed)</small>
							<input type="password" name="password" class="form-control" id="modifyPasswordInput" value="1234" placeholder="Password" required="">
								<div class="invalid-feedback">
									A valid password is required.
								</div>								
						  </div>
						  
						  <br/>					  
						  <div class="form-group">
							<label for="nameInput">First Name</label> <small>(Minimum of 2 characters, spaces/numbers not allowed)</small>
							<input type="text" name="firstname" class="form-control" id="modifyFirstnameInput" value="{{#userData}}{{firstname}}{{/userData}}" placeholder="Name" required="">				
								<div class="invalid-feedback">
									A valid first name is required.
								</div>							
						  </div>
						   <br/>	
						   <div class="form-group">
							<label for="nameInput">Last Name</label> <small>(Minimum of 2 characters, spaces/numbers not allowed)</small>
							<input type="text" name="lastname" class="form-control" id="modifyLastNameInput" value="{{#userData}}{{lastname}}{{/userData}}" placeholder="Name" required="">				
								<div class="invalid-feedback">
									A valid last name is required.
								</div>							
						  </div>											  
						  <br/>		
							
							
						  <button type="submit" class="btn btn-primary hidden" id="modifyUserSubmitBtn">Submit</button>	
						  <button type="button" class="btn btn-dark" id="modifyUserFakeSubmitBtn">Submit</button>				  
				</form>
						
			</div>			
		</div>
		
		 <footer class="footer">
			  <div class="container">
				<span class="text-muted" id="copyright"></span>
			  </div>
		</footer>
			
		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous"></script>
		<script type="text/javascript" src="./js/main.js"></script>
		<script type="text/javascript" src="./js/user.js"></script>
	</body>
</html>